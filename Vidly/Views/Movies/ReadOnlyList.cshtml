@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover" width="800">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
        {
    <script>
            $(document).ready(function () {
                var table = $("#movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc: ""
                    },
                    "dom": '<<"top"fr>t<"bottom"lp><"clear">>',
                    columns: [
                        {
                            data: "name",
                        },
                        {
                            data: "genre.name"
                        },
                    ]
                });
            });
    </script>
}